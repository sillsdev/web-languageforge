{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Full App (legacy)",
      "configurations": [".NET Core (legacy)", "XDebug (legacy)", "Launch Chrome (legacy)"]
    },
    {
      "name": "Full App (SF)",
      "configurations": [".NET Core (SF)", "Launch Chrome (SF)"]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Node debugger",
      "port": 9229
    },
    {
      "name": ".NET Core (legacy)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet (legacy)",
      "program": "${workspaceRoot}/src/netcore-api/SIL.XForge.WebApi.Server/bin/Debug/netcoreapp2.0/SIL.XForge.WebApi.Server.dll",
      "args": [],
      "cwd": "${workspaceRoot}/src/netcore-api/SIL.XForge.WebApi.Server/",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome (legacy)",
      "url": "https://languageforge.local",
      "webRoot": "${workspaceRoot}",
      "linux": {
        "runtimeExecutable": "/usr/bin/chromium-browser"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome (SF)",
      "url": "https://beta.scriptureforge.local",
      "webRoot": "${workspaceRoot}/src/SIL.XForge.Scripture/ClientApp",
      "linux": {
        "runtimeExecutable": "/usr/bin/chromium-browser"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "XDebug (legacy)",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "windows":{
        "localSourceRoot": "${workspaceRoot}",
        "serverSourceRoot": "${env:WSL_XFORGE_PATH}"
      }
    },
    {
      "name": ".NET Core (SF)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet",
      "program": "${workspaceRoot}/src/SIL.XForge.Scripture/bin/Debug/netcoreapp2.1/SIL.XForge.Scripture.dll",
      "args": [],
      "cwd": "${workspaceRoot}/src/SIL.XForge.Scripture/",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
  ]
}
