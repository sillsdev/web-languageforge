    <!-- Banner -->
    <section id="banner">
        <h2>Language Forge</h2>
        <p>Collaborative web-based dictionary building that syncs with FieldWorks</p>
        <ul class="actions">
            <li><a href="/public/signup" class="button special">Sign Up</a></li>
